<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="jobDtlVM"
            type="com.seasia.driverapp.viewmodel.JobDetailsVM" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_common"
            layout="@layout/common_toolbar_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_toobar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/restaorant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150">
                <ImageView
                    android:id="@+id/restaurantImage"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/dp_8"
                    android:elevation="6dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/round_layout_address"
                    android:id="@+id/restaorentDetail"
                    android:layout_marginTop="@dimen/dp_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:id="@+id/name"
                        android:textSize="@dimen/sp_16"
                        android:text="Rastaurant Name"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_marginTop="@dimen/dp_5"
                        android:id="@+id/viewLine"
                        android:layout_below="@+id/name"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:background="@color/colorGolden"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_rating"
                        android:layout_below="@+id/viewLine"
                        android:id="@+id/rating"
                        android:textSize="@dimen/sp_14"
                        android:drawableTint="@color/colorGolden"
                        android:text="Rating"

                        android:drawablePadding="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:drawableStart="@drawable/ic_location"
                        android:layout_below="@+id/rating"
                        android:drawableTint="@color/colorRed"
                        android:id="@+id/location"
                        android:textSize="@dimen/sp_14"
                        android:drawablePadding="@dimen/dp_5"
                        android:text="Location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/restaorentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvOrderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="order type"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvItemStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentEnd="true"
                        android:text="delivery status"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tvItemsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="items count"
                        android:textStyle="bold" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvOrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/tvOredrInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/order_info"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorBlack"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tvDeliveryMethodTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/order_address"
                        />

                    <TextView
                        android:id="@+id/tvDeliveryMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                        android:text="@string/delivery_method"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/delivery_date_time"
                        />

                    <TextView
                        android:id="@+id/tvOrderDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/date"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/tipParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tvTipTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:text="Tip" />

                    <TextView
                        android:id="@+id/tvTipAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:text="@string/amount"
                        android:textColor="@color/colorBlue2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:id="@+id/tvTotalAmountTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:text="Total Amount" />

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:text="@string/amount"
                        android:textColor="@color/colorBlue" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Instractions"
                    android:visibility="gone"
                    android:id="@+id/instractions"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/interactionRecyclerVIew"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnCompleteOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@drawable/button_round_back_blue"
                    android:text="@string/btn_complete_order"
                    android:visibility="gone"
                    android:onClick="@{(v) -> jobDtlVM.clickListener(v)}"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</layout>