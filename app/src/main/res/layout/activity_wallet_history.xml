<?xml version="1.0" encoding="utf-8"?>
<layout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.WalletHistoryActivity">

    <include
        android:id="@+id/common_tool_bar"
        layout="@layout/common_toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50" />

    <RelativeLayout
        android:id="@+id/dateParent"
        android:layout_margin="@dimen/dp_20"
        android:layout_below="@+id/common_tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:padding="@dimen/dp_5"
            android:background="@drawable/shape_round__date_bgr"
            android:hint="Start date"
            android:id="@+id/tvStartDate"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"

            android:gravity="center"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="to"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="@dimen/dp_5"
            android:background="@drawable/shape_round__date_bgr"
            android:hint="End date"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"

            android:id="@+id/tvEndDate"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <Button
        android:layout_below="@+id/dateParent"
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/button_round_back_blue"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

    <View
        android:id="@+id/view"
        android:background="@color/colorGrey1"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRecycler"
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="5dp"
        android:background="@color/colorWhite" />
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/noRecordFound"
        android:text="No Record Found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
</layout>
