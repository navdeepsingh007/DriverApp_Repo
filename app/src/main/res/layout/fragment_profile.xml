<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/topround"
        android:fitsSystemWindows="true"
        tools:context=".views.CustomerFeedbackActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/topround"
            android:backgroundTint="@color/colorWhite"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@color/colorGreenToolBar"
                app:contentScrim="@color/colorGreenToolBar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:toolbarId="@+id/toolbar">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_feedback"
                    app:riv_corner_radius_top_left="@dimen/dp_35"
                    app:riv_corner_radius_top_right="@dimen/dp_35"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@color/colorGreenToolBar"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/llEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_feedback"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/round_back_white"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_5"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivEditCamera"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/dp_5"
                        android:src="@drawable/ic_photo_camera" />

                    <TextView
                        android:id="@+id/tvEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/profile_edit"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

<!--                <androidx.appcompat.widget.Toolbar-->
<!--                    android:id="@+id/toolbar"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="?attr/actionBarSize"-->
<!--                    android:layout_marginLeft="-18dp"-->
<!--                    app:layout_collapseMode="pin"-->
<!--                    app:popupTheme="@style/AppTheme.PopupOverlay">-->

<!--                    <include-->
<!--                        android:id="@+id/common_tool_bar"-->
<!--                        layout="@layout/common_toolbar_back"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:visibility="gone" />-->

<!--                </androidx.appcompat.widget.Toolbar>-->

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivDriverImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_white"
            android:elevation="@dimen/dp_10"
            android:padding="@dimen/dp_2"
            android:src="@drawable/user"
            app:civ_border_color="@color/colorWhite"
            app:layout_anchor="@id/app_bar"
            app:layout_anchorGravity="bottom|center" />

        <View
            android:id="@+id/vDummy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70"
            app:layout_anchor="@id/ivDriverImage"
            app:layout_anchorGravity="bottom|center"/>


        <!-- driver details -->
        <LinearLayout
            android:id="@+id/llDriverDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/vDummy"
            app:layout_anchorGravity="bottom|center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_25"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvNameTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_overall_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/overall_rating"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/driver_name"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-10dp"
                        android:numStars="5"
                        android:progressTint="@color/colorGolden"
                        android:scaleX=".5"
                        android:scaleY=".5" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvTotalOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalFeedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvCommentTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/driver_comment"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/driver_comment" />

            </LinearLayout>
        </LinearLayout>
        <include
            android:id="@+id/myProfile"
            layout="@layout/activity_customer_feedback_old2" />

        <!--        <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/ivDriverImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:fabCustomSize="70dp"
                    app:backgroundTint="@color/colorWhite"
                    android:background="@color/colorWhite"
                    app:layout_anchor="@id/app_bar"
                    android:scaleType="centerCrop"
                    app:maxImageSize="@dimen/dp_80"
                    app:layout_anchorGravity="bottom|center"
                    android:src="@drawable/user" />-->

        <!--        <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fab"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/fab_margin"
                    android:background="@drawable/circle_white"
                    android:elevation="@dimen/dp_10"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/user"
                    android:visibility="gone"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp"
                    app:layout_anchor="@id/app_bar"
                    app:layout_anchorGravity="bottom|center" />-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>