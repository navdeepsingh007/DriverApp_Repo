        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:elevation="@dimen/dp_15"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAssignedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/date"
                        android:textStyle="bold" />

<!--                    <TextView-->
<!--                        android:textColor="@color/colorblack"-->
<!--                        android:id="@+id/tvOrderType"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/order_type" />-->

<!--                    <TextView-->
<!--                        android:id="@+id/tvOrderPrice"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:text="@string/order_price"-->
<!--                        android:textColor="@color/colorBlue"-->
<!--                        android:textStyle="bold" />-->

                    <Button
                        android:id="@+id/btnCall"
                        android:layout_width="@dimen/dp_70"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_small_blue"
                        android:text="@string/btn_call"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/colorGreyLight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pickup"
                            android:layout_marginTop="@dimen/dp_5"
                            android:textSize="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="Pickup Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/imgAddress"
                            android:src="@drawable/ic_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="@string/address"
                            android:layout_below="@+id/pickup"
                            android:layout_toRightOf="@+id/imgAddress"
                            />

                        <View
                            android:id="@+id/viewAddress"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginRight="@dimen/dp_20"
                            android:layout_below="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:background="@color/colorGreyLight" />
                        <TextView
                            android:layout_marginTop="@dimen/dp_8"
                            android:id="@+id/delivery"
                            android:layout_below="@+id/viewAddress"
                            android:textSize="@dimen/dp_10"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="Delivery Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/deliveryAddress"
                            android:layout_below="@+id/delivery"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/llAddressDtl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_marginLeft="-3dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/iv_location"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:src="@drawable/gmaps_icon" />

<!--                        <TextView-->
<!--                            android:id="@+id/tvAddress"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:paddingLeft="@dimen/dp_5"-->
<!--                            android:text="@string/address"-->
<!--                            android:layout_toRightOf="@+id/iv_location"-->
<!--                            />-->

                        <Button
                            android:id="@+id/btnDetail"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_25"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/round_back_green"
                            android:text="@string/btn_detail"
                            android:visibility="gone"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/gmaps2"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreyLight" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llAddressDtl"
                        android:layout_marginTop="@dimen/dp_10"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            android:src="@drawable/triangle" />




                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorblack"
                            android:id="@+id/tvOrderTypeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Id" />

                        <TextView
                            android:layout_below="@+id/tvOrderTypeTitle"
                            android:textColor="@color/colorblack"
                            android:id="@+id/tvOrderType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_type" />

                        <TextView
                            android:id="@+id/tvOrderPriceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Value"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_below="@+id/tvOrderPriceTitle"
                            android:id="@+id/tvOrderPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/order_price"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <View
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGreyLight" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    >

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:background="@drawable/round_small_blue"
                        android:text="@string/btn_start"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_back_maroon"
                        android:text="@string/btn_cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
